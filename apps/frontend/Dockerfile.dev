FROM node:22-alpine

# Set working directory
WORKDIR /app

# Install pnpm globally
RUN corepack enable

# Copy workspace configuration
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Copy frontend package.json
COPY apps/frontend/package.json ./apps/frontend/

# Install all dependencies (this installs for the entire workspace)
RUN pnpm install

# Copy frontend source files
COPY apps/frontend/app ./apps/frontend/app
COPY apps/frontend/lib ./apps/frontend/lib
COPY apps/frontend/public ./apps/frontend/public
COPY apps/frontend/*.json ./apps/frontend/
COPY apps/frontend/*.js ./apps/frontend/
COPY apps/frontend/*.mjs ./apps/frontend/
COPY apps/frontend/*.ts ./apps/frontend/
COPY apps/frontend/README.md ./apps/frontend/

# Set working directory to frontend
WORKDIR /app/apps/frontend

# Expose port
EXPOSE 3000

# Start development server
CMD ["pnpm", "run", "dev"]
